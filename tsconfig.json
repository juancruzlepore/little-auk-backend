{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "outDir": "dist",
    "sourceMap": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es2019"],
    "baseUrl": ".",
    "target": "es6",
  },
  "lib": ["es2015"],
  "rules": {
    "no-console": false
  },
}